generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id Int @id @default(autoincrement)
  title String 
  description String
  type String?
  workers Int
}

model Order {
  id Int @id @default(autoincrement)
  userID Int @id
  serviceID Int @id
  date Date
  state String
  description String?
}

model User {
  id Int @id @default(autoincrement)
  username String
  email String @email
  password String @password
  role String
}